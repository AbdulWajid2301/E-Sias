<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ammar_Blue"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="20dp"
        android:background="@color/Ammar_Temp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_menu_24" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="375dp"
                android:layout_marginTop="16dp"
                android:onClick="showPopup"
                android:src="@drawable/ic_baseline_more_vert_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/myrbold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Esia Administration"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="28dp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </LinearLayout>

    <TableRow
        android:id="@+id/TableRow_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="53dp"

        app:layout_constraintTop_toBottomOf="@id/linearLayout1">

        <TextView
            android:layout_marginLeft="15dp"
            android:paddingBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="left|center"
            android:text="Welcome, Esia Admin"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="42dp" />
    </TableRow>
    <TableRow
        android:id="@+id/TableRow_02"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TableRow_01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <Button
            android:layout_marginHorizontal="5dp"

            android:layout_height="40dp"
            android:layout_weight="1.25"
            android:background="@drawable/white_bg"
            android:text="Teachers "
            />

        <Button
            android:layout_marginHorizontal="5dp"
            android:drawablePadding="-10dp"
            android:background="@drawable/white_all_over"
            android:drawableLeft="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:text="view"
            />
        <Button
            android:layout_marginHorizontal="5dp"
            android:drawablePadding="-10dp"
            android:background="@drawable/white_all_over"
            android:drawableLeft="@drawable/ic_baseline_add_24"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="add"
            android:layout_weight="2"
            />
    </TableRow>
    <TableRow
