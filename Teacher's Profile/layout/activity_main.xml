<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Ammar_Blue"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="20dp"
        android:background="@color/Ammar_Temp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_baseline_menu_24" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_marginLeft="375dp"
                android:layout_marginTop="16dp"
                android:onClick="showPopup"
                android:src="@drawable/ic_baseline_more_vert_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/myrbold"
                android:gravity="center"
                android:padding="10dp"
                android:text="Esia Administration"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="28dp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </LinearLayout>

    <TableRow
        android:id="@+id/TableRow_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="53dp"

        app:layout_constraintTop_toBottomOf="@id/linearLayout1">

    <TextView
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Teacher's Profile"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="42dp" />
        </TableRow>

    <TableRow
        android:id="@+id/TableRow_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/TableRow_01">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:text="Name : "
            android:textColor="#000"
            android:background="@drawable/white_bg"
            android:textSize="17.5dp"
            android:padding="15dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Abdul Samad C "
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/white_all_over"
            android:textSize="17.5dp"
            android:padding="15dp"
            />

    </TableRow>
    <TableRow
        android:id="@+id/TableRow_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/TableRow_02">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:text="Department : "
            android:textColor="#000"
            android:background="@drawable/white_bg"
            android:textSize="17.5dp"
            android:padding="15dp"

            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Computer Science "
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/white_all_over"
            android:textSize="17.5dp"
            android:padding="15dp"
            />

    </TableRow>
    <TableRow
        android:id="@+id/TableRow_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/TableRow_03">

        <TextView
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:text="Email Address : "
            android:textColor="#000"
            android:background="@drawable/white_bg"
            android:textSize="17.5dp"
            android:padding="15dp"

            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="abdulsama@gmail.com "
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/white_all_over"
            android:textSize="17.5dp"
            android:padding="15dp"
            />

    </TableRow>
    <TableRow
        android:id="@+id/TableRow_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="53dp"

        android:paddingTop="30dp"
        android:gravity="center"

        app:layout_constraintTop_toBottomOf="@id/TableRow_04">

        <Button
            android:layout_marginRight="20dp"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"
            android:text="Edit"
            android:textColor="#fff"
            android:textSize="12.5dp"
            app:layout_constraintLeft_toLeftOf="@id/TableRow_04" />

        <Button
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/TableRow_04"

            android:text="Delete"
            android:textColor="#fff"
            android:textSize="12.5dp"
            android:background="@drawable/delete_bg"
            />
    </TableRow>>



</androidx.constraintlayout.widget.ConstraintLayout>